@model IEnumerable<ExcerciseLog.Models.NewExercise>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Exercise Log</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free Website Template" name="keywords">
    <meta content="Free Website Template" name="description">

    <!-- Favicon -->
    <link href=@Url.Content("/Content/img/favicon.ico") rel="icon">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Flaticon Font -->
    <link href=@Url.Content("/Content/lib/flaticon/font/flaticon.css") rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href=@Url.Content("/Content/css/style.min.css") rel="stylesheet">
</head>

<body class="bg-white">
    <!-- Navbar Start -->
    <div class="container-fluid p-0 nav-bar">
        <nav class="navbar navbar-expand-lg bg-none navbar-dark py-3">
            <a href="" class="navbar-brand">
                <h1 class="m-0 display-4 font-weight-bold text-uppercase text-white">Exercise Log</h1>
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                <div class="navbar-nav ml-auto p-4 bg-secondary">
                    <a href='@Url.Action("HomePage","ExerciseLog")' class="nav-item nav-link">Home</a>
                    <a href='@Url.Action("Log","ExerciseLog")' class="nav-item nav-link active">Exercise Log</a>
                    <a href='@Url.Action("NewExercises","ExerciseLog")' class="nav-item nav-link">New Exercise</a>
                    <a href='@Url.Action("Exercises","ExerciseLog")' class="nav-item nav-link ">Exercises</a>
                </div>
            </div>
        </nav>
    </div>
        <!-- Navbar End -->


    <!-- Page Header Start -->
    <div class="container-fluid page-header mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center pt-0 pt-lg-5" style="min-height: 400px">
            <h4 class="display-4 mb-3 mt-0 mt-lg-5 text-white text-uppercase font-weight-bold">Exercise Log</h4>
                    </div>
    </div>
    <!-- Page Header End -->


    <!-- Contact Start -->
        <div class="row">
            <div class="col-md-6 pb-5">
                <img style="width: 100%; height: 392px;" src=@Url.Content("/Content/img/feature-1.jpg")  aria-hidden="false" tabindex="0"></img>
            </div>
            <div class="col-md-6 pb-5">
                <div class="contact-form">
                    <div id="success"></div>
                    <form name="sentMessage" id="contactForm" novalidate="novalidate">
                        
                                             <div class="tab-content">
                <div id="class-all" class="container tab-pane p-0 active">
                    <div class="table-responsive">
                        <table class="table table-bordered table-lg m-0">
                            <thead class="bg-secondary text-white text-center">
                                <tr>
                                   <th> <h3 style="color:white"> <b> Exercises </b> </h3></th>
                                    <th> <h3 style="color:white"> <b> Date </b> </h3></th>
                                    <th> <h3 style="color:white"> <b> Current Date and Time </b> </h3></th>
                                    <th> <h3 style="color:white"> <b> Set </b> </h3></th>
                                    <th> <h3 style="color:white"> <b> Rep</b> </h3></th>
                                    <th> <h3 style="color:white"> <b> Delete</b> </h3></th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                                                @foreach (var item in Model)
                                                                {
                                                                    String img64 = Convert.ToBase64String(item.Exercise_img);
                                                                    String img64Url = string.Format("data:image/" + item.img_type + ";base64,{0}", img64);

                                <tr>
                                    <th class="bg-secondary text-white align-middle"> <a href='@Url.Action("updatelog","ExerciseLog",new { id = item.Logid })' style="color:red"> @Html.DisplayFor(modelItem => item.ExerciseName) <img src="@img64Url" alt="Forest" style="height:40px;width:40px;border-radius: 50%;"> </a></th>
                                    <th class="bg-secondary text-white align-middle">   @Html.DisplayFor(modelItem => item.date)</th>
                                     <th class="bg-secondary text-white align-middle">   @ViewBag.CurrentDateTime</th>
                                    <th class="bg-secondary text-white align-middle">  @Html.DisplayFor(modelItem => item.set) </th>
                                    <th class="bg-secondary text-white align-middle">   @Html.DisplayFor(modelItem => item.rep) </th>
<th class="bg-secondary text-white align-middle">
    @Html.ActionLink("Remove", "Remove", "ExerciseLog", new { id = item.Logid }, new { @class = "btn btn-danger" })
</th>
                                </tr>
                                                                }
                                </tbody>



                        </table>
                    </div>
                </div>
               
    </div>
                   
    <!-- Contact End -->


    <!-- Footer Start -->
        <!-- Footer End -->


   <!-- Back to Top -->
    <a href="#" class="btn btn-outline-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src=@Url.Content("/Content/lib/easing/easing.min.js")></script>
    <script src=@Url.Content("/Content/lib/waypoints/waypoints.min.js")></script>

    <!-- Contact Javascript File -->
    <script src=@Url.Content("/Content/mail/jqBootstrapValidation.min.js")></script>
    <script src=@Url.Content("/Content/mail/contact.js")></script>

    <!-- Template Javascript -->
    <script src=@Url.Content("/Content/js/main.js")></script>
</body>

</html>